{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type":"object",
    "required": ["creatures"],
    "properties":{
        "creatures": {
            "type":"array", "items": {
                "type": "object",
                "required": ["id","maxhp","strength","speed","size"],
                "properties": {
                    "id": {"type":"integer"},
                    "type": {"type":"string"},
                    "maxhp": {"type":"integer","minimum": 0},
                    "currrenthp": {"type": "integer"},
                    "strength": {"type":"integer","minimum": 0},
                    "speed": {"type":"integer","minimum": 0},
                    "willpower": {"type":"integer","minimum": 0},
                    "spiritpower": {"type":"integer","minimum": 0},
                    "spiritstability": {"type":"integer","minimum": 0},
                    "size": {"type":"integer","minimum": 1,"maximum": 20},
                    "inventoryslots": {"type":"integer","minimum": 0},
                    "inventory":{"type":"array","items": {
                        "$ref":"itemset-schema.json#/definitions/item"
                    }}
                }
            }
        }
    }
}