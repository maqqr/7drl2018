{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "definitions": {
    "tileLayer": {
      "$id": "tileLayer",
      "type": "object"
    },
    "objectLayer": {
      "$id": "objectLayer",
      "type": "object"
    }
  },
  "properties": {
    "height": {
      "$id": "/properties/height",
      "type": "integer",
      "enum": [12]
    },
    "width": {
      "$id": "/properties/width",
      "type": "integer",
      "enum": [12]
    },
    "infinite": {
      "$id": "/properties/infinite",
      "type": "boolean",
      "enum": [false]
    },
    "layers": {
      "$id": "/properties/layers",
      "type": "array",
      "items": {
        "$id": "/properties/layers/items",
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "enum": ["tilelayer"]
              },
              "name": {
                "enum": ["tile"]
              },
              "x": { "enum": [0] },
              "y": { "enum": [0] },
              "properties": {
                "enum": ["OLET LAITTANUT PROPERTYN VÄÄRÄÄN PAIKKAAN! SE PITÄÄ OLLA TILESSÄ EIKÄ ITSE LAYERISSÄ"]
              }
            }
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "enum": ["objectgroup"]
              },
              "name": {
                "enum": ["description", "furniture"]
              },
              "x": { "enum": [0] },
              "y": { "enum": [0] },
              "properties": {
                "enum": ["OLET LAITTANUT PROPERTYN VÄÄRÄÄN PAIKKAAN! SE PITÄÄ OLLA OBJEKTISSA EIKÄ ITSE LAYERISSÄ"]
              },
              "objects": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "width": { "enum": [16] },
                    "height": { "enum": [16] },
                    "rotation": { "enum": [0] },
                    "properties": {
                      "type": "object",
                      "properties": {
                        "text": { "type": "string" },
                        "icon": {"type":"integer"},
                        "movable": {"type":"integer","minimum": 0,"maximum": 21,"default":false},
                        "type": {"type":"string"},
                        "maxsize": {"type":"integer","minimum": 0,"maximum": 21,"default":0},
                        "damage": {"type":"integer","minimum": 0},
                        "activation": {"type":"string"},
                        "useractivation": {"type":"string"},
                        "useractivationtext": {"type":"string"},
                        "requireitem": {"type":"boolean"},
                        "activationtarget":{"type":"array","items": {
                            "type":"array",
                            "items": {
                                "type":"integer",
                                "minItems":2,
                                "maxItems": 2
                            }
                        }}
                      },
                      "additionalProperties": false
                    }
                  }
                }
              }
            }
          }
        ]
      }
    },
    "nextobjectid": {
      "$id": "/properties/nextobjectid",
      "type": "integer"
    },
    "orientation": {
      "$id": "/properties/orientation",
      "type": "string",
      "enum": ["orthogonal"]
    },
    "renderorder": {
      "$id": "/properties/renderorder",
      "type": "string",
      "enum": ["right-down"]
    },
    "tiledversion": {
      "$id": "/properties/tiledversion",
      "type": "string",
      "examples": [
        "1.1.2"
      ]
    },
    "tileheight": {
      "$id": "/properties/tileheight",
      "type": "integer",
      "enum": [16]
    },
    "tilesets": {
      "$id": "/properties/tilesets",
      "enum": ["POISTA KOKO 'tilesets' KOHTA KOKONAAN!"]
    },
    "tilewidth": {
      "$id": "/properties/tilewidth",
      "type": "integer",
      "enum": [16]
    },
    "type": {
      "$id": "/properties/type",
      "type": "string",
      "enum": ["map"]
    },
    "version": {
      "$id": "/properties/version",
      "type": "integer"
    }
  }
}